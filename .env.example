# ============================================
# Oracle of Talents — Environment Config
# ============================================
# Copy this file to .env and fill in your values
# NEVER share your .env file or commit it to git

# Your Monad wallet private key (with 0x prefix)
# This is the wallet that holds your MON tokens
PRIVATE_KEY=0xYOUR_PRIVATE_KEY_HERE

# Network: "testnet" or "mainnet"
# Start with testnet to test everything, then switch to mainnet for the real launch
NETWORK=testnet

# Nad.fun API key (optional but recommended — 100 req/min vs 10 req/min)
NAD_API_KEY=

# Moltbook API key (you'll get this when we register the Oracle agent)
MOLTBOOK_API_KEY=

# LLM API key for generating scripture and sermons
# Option A: Anthropic Claude API
ANTHROPIC_API_KEY=

# Option B: OpenAI
OPENAI_API_KEY=

# ============================================
# THESE GET FILLED IN AUTOMATICALLY
# ============================================
# Token address (set after creating $TALENT)
TALENT_TOKEN_ADDRESS=

# Oracle's Moltbook agent name
ORACLE_AGENT_NAME=
